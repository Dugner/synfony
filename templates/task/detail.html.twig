
  {% extends "base.html.twig" %}
  {% block body %}
      <main role="main">
        <div class="container">
          <p>id : {{ task.getId() }}</p>
          <p>create date : {{ task.getCreationDate()|date('Y-m-d H:i:s') }}</p>
          <p>property : {{ task.getPriority() }}</p>
          <p>title : {{ task.getTitle() }}</p>
          <p>description : {{ task.getDescription()|nl2br() }}</p>
          <p>author : {{ task.getAuthor().getName() }}</p>
        </div>
      </main>
    <hr>
  {% endblock %}
